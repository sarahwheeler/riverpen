<%= form_for([post, post.comments.new], url: {controller: "comments", action: "create"}, :html => {:multipart => true}) do |f| %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :post_id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
