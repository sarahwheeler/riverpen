<p id="notice"><%= notice %></p>

<div class="col-md-4">
	<div id="stream-panel">
		<div id="stream-user-title"><%= link_to "#{@user.username}", profile_path(@user), id: "stream-profile-link" %><sup>:<%= "#{@stream.category}" %></sup></div>
		<p><%= @stream.posts.count %> posts</p>

		<button class="follow-stream">Follow stream</button>

		<%= link_to "New Post", new_post_path(:stream_id => @stream.id) %><br>
		<%= link_to 'Edit Stream', edit_stream_path(@stream) %>
	</div>
</div>
<div class="col-md-2"></div>
<div class="col-md-6">
	<% @stream.posts.each do |post| %>
	  <div class="post-wrapper">
	    <h2 class="post-headline"><%= post.title %></h2>
	     <p><%= simple_format h post.content %></p><br>
	     <p><%= "Penned " + time_ago_in_words(post.created_at) + " ago" %></p>
	  <div class="post-footer">
	  	<ul>
	  		<li><%= link_to 'Show', post_path(@stream, post) %></li>
	  		<li>
	  			<%= link_to edit_post_path(@stream, post) do %>
			    	<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
					<% end %>
	  		</li>
	  		<li>
	  			<%= link_to post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?'} do %>
			    	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					<% end %>
	  		</li>
	  		<li>
	    		<div class="view-post-reply"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span></div>
	  		</li>
	  		<li>
	  			<div class="view-post-comments">View <%= pluralize(post.comments.count, 'comment') %></div>
	  		</li>




	    
	  </div>
    	<!-- Refactor out into a partial -->
    	<div class="post-reply">
    		<%= form_for([post, post.comments.new], :html => {:multipart => true}) do |f| %>
				  <div class="field">
				    <%= f.label :content, 'Comment' %><br>
				    <%= f.text_area :content %>
				  </div>

				  <div class="actions">
				    <%= f.submit %>
				  </div>		  
				<% end %>
    	</div>

    	<div class="post-comments">
	    	<% if post.comments %>	
	    		<% post.comments.each do |comment| %>
	    			<%= comment.content %>
	    			<div class="comment-byline">By <%= comment.user_id %> | <%= link_to 'Delete', [post, comment], confirm: "Are you sure you want to delete this plant?", :method => :delete %>
	    			 	<%# time_ago_in_words(comment.created_at) + " ago" %> 
	    			</div>
	    			<hr> 
	    		<% end %>
	    	<% end %>
    	</div>
    	<br>

	    </div>
	  </div>
	<% end %>
</div>




