<%= form_for @post, url: {action: "streamless_create"}, html: {class: "streamless-post-form"} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h3> Select a stream: </h3>

<%= select(:stream_id, @post.stream_id, Stream.all.collect {|s| [ s.category.capitalize, s.id ] }, :id => "stream-select") %>

<hr>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.text_area :content %>
  </div>

    <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
