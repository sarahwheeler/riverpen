<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => @user.id %>

  <div class="field">
    <%= f.label :category %><br />
    <%= f.select(:category, options_for_select([ 
                                        ['Fandom', 'fandom'], 
                                        ['Fiction', 'fiction'],
                                        ['Hobbies', 'hobbies'],
                                        ['Personal', 'personal'],
                                        ['Professional', 'professional']
                                      ])) %>
  </div>

  <div class="field">
    <%= f.label "Public?" %> <br />
    <%= f.check_box :public %> <br />
  </div>


  

  <div class="actions buttonholder">
    <%= f.submit %>
  </div>
<% end %>
