<div id="navbar">
	<div class="navbar-content">
		<span id="nav-logo">Riverpen</span>

		<ul id="nav-menu">
			<li class="nav-link"><%= link_to "Streamline", streams_path %></li>
			<li class="nav-link"><%= link_to "+Post", post_path %></li>
			<li class="nav-link"><%= link_to "+Stream", new_stream_path %></li>

			<% if user_signed_in? %>

				<li class="nav-link">
					<div class="dropdown">
						<a data-target="#" href="#" data-toggle="dropdown" class="dropdown-toggle" aria-expanded="true">
	    			<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
	    				<span class="caret"></span>
	  				</a>
	  				<ul class="dropdown-menu menu-patch" aria-labelledby="dropdownNavbar">	
							<li class="dropdown-link">
								<div>
									<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to "Profile", profile_path(current_user), id: 'profile-link' %>
								</div>
							</li>
							<li class="dropdown-link">
								<div>
									<span class="glyphicon glyphicon-cog" aria-hidden="true"></span><%= link_to "Settings", settings_path %>
								</div>
							</li>
						</ul>
					</div>
				</li>
				<li class="nav-link"><%= link_to "Log out", logout_path %></li>

			<% else %>

				<li class="nav-link"><%= link_to "Log in", new_user_session_path, :remote => "true", :data => { :toggle => "modal", :target =>"#loginModal" } %></li>
				<li class="nav-link"><%= link_to "Sign Up!", new_user_registration_path, :remote => "true", :data => { :toggle => "modal", :target =>"#signupModal" } %></li>

			<% end %>
		</ul>
	</div>


	<div id="signupModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="signupModal" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
	        <h4 class="modal-title">Create Your Riverpen Account</h4>
	      </div>
	      <div class="modal-body">
	        <%= render "devise/modals/signup_modal" %>
	    	</div>
	    </div>
	  </div>
	</div>


	<div id="loginModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
	        <h4 class="modal-title">Log into Riverpen</h4>
	      </div>

	      <div class="modal-body">
	        <%= render "devise/modals/login_modal" %>
	    	</div>
	    </div>
	  </div>
	</div>

</div>